{
  "extends": ["eslint:recommended", "next", "next/core-web-vitals", "plugin:prettier/recommended"],
  "rules": {
    "indent": ["error", 2], // Enforce 2-space indentation
    "quotes": ["error", "single"], // Use single quotes
    "semi": ["error", "always"], // Always use semicolons
    "react/react-in-jsx-scope": "off", // Not needed with Next.js
    "react/prop-types": "off", // If you're using TypeScript, you might not need prop-types
    "no-unused-vars": "warn", // Warn about vars that aren't used
    "no-console": "off", // Allow console statements, but consider turning this on for production
    "jsx-a11y/anchor-is-valid": [
      "error",
      {
        "components": ["Link"],
        "specialLink": ["hrefLeft", "hrefRight"],
        "aspects": ["invalidHref", "preferButton"]
      }
    ] // Ensure accessibility of anchor elements
  },
  "settings": {
    "react": {
      "version": "detect" // Automatically detect the react version
    }
  }
}
